@model PricePulse.ViewModels.CompetitorProductDetailsViewModel
@{
    ViewData["Title"] = $"Product Details - {Model.Product.ProductName}";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet"/>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "primary": "#5d288a",
                        "accent": "#f94037",
                        "background-light": "#eff9f2",
                        "secondary-accent": "#0cb8ca"
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.75rem",
                        "lg": "1rem",
                        "xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 24
        }
    </style>
</head>
<body class="bg-background-light font-display text-gray-800">
    <div class="flex h-screen overflow-hidden">
        <aside class="w-64 bg-white border-r border-gray-200 flex flex-col">
            <div class="p-6">
                <div class="flex items-center space-x-3 mb-8">
                    <img src="/images/logo.png" alt="PricePulse logo" class="h-10 w-10" />
                    <h1 class="text-2xl font-bold text-gray-900">PricePulse</h1>
                </div>
                <nav class="space-y-2">
                    <a class="flex items-center space-x-3 px-4 py-3 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-primary transition-colors" href="@Url.Action("Index", "Home")">
                        <span class="material-symbols-outlined">home</span>
                        <span>Home</span>
                    </a>
                    <a class="flex items-center space-x-3 px-4 py-3 text-sm font-medium rounded-lg bg-primary text-white shadow-lg shadow-primary/30" href="@Url.Action("Index", "Competitor")">
                        <span class="material-symbols-outlined">radar</span>
                        <span>Competitors</span>
                    </a>
                    <a class="flex items-center space-x-3 px-4 py-3 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100 hover:text-primary transition-colors" href="@Url.Action("Index", "ProductDiscovery")">
                        <span class="material-symbols-outlined">inventory_2</span>
                        <span>Discover</span>
                    </a>
                </nav>
            </div>
        </aside>
        
        <main class="flex-1 flex flex-col overflow-y-auto">
            <div class="p-6 lg:p-8">
                <div class="max-w-7xl mx-auto">
                    <!-- Header -->
                    <div class="bg-white rounded-xl border border-gray-200 p-8 mb-8">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-4">
                                <a href="@Url.Action("CompetitorProducts", "Competitor", new { domain = Model.CompetitorDomain })" 
                                   class="p-2 text-gray-400 hover:text-primary rounded-lg transition-colors">
                                    <span class="material-symbols-outlined">arrow_back</span>
                                </a>
                                <div>
                                    <h1 class="text-3xl font-bold text-gray-900">@Model.Product.ProductName</h1>
                                    <p class="mt-2 text-gray-600">From @Model.CompetitorName</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                @if (!string.IsNullOrEmpty(Model.Product.CompetitorProductUrl))
                                {
                                    <a href="@Model.Product.CompetitorProductUrl" target="_blank" 
                                       class="bg-primary text-white px-6 py-3 rounded-lg font-bold hover:bg-primary/90 transition-transform transform hover:scale-105 shadow-lg shadow-primary/30 flex items-center space-x-2">
                                        <span class="material-symbols-outlined">open_in_new</span>
                                        <span>View Product</span>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Product Info -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
                        <!-- Product Details -->
                        <div class="lg:col-span-2 bg-white rounded-xl border border-gray-200 p-8">
                            <div class="flex items-start space-x-6">
                                @if (!string.IsNullOrEmpty(Model.Product.ProductImageUrl))
                                {
                                    <img class="h-32 w-32 rounded-lg object-cover" src="@Model.Product.ProductImageUrl" alt="@Model.Product.ProductName" />
                                }
                                else
                                {
                                    <div class="h-32 w-32 rounded-lg bg-gray-200 flex items-center justify-center">
                                        <span class="material-symbols-outlined text-gray-400 text-4xl">image</span>
                                    </div>
                                }
                                <div class="flex-1">
                                    <h2 class="text-2xl font-bold text-gray-900">@Model.Product.ProductName</h2>
                                    @if (!string.IsNullOrEmpty(Model.Product.ProductDescription))
                                    {
                                        <p class="mt-2 text-gray-600">@Model.Product.ProductDescription</p>
                                    }
                                    <div class="mt-4 flex items-center space-x-4">
                                        @if (!string.IsNullOrEmpty(Model.Product.ProductCategory))
                                        {
                                            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                                                @Model.Product.ProductCategory
                                            </span>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Product.CompetitorPrice))
                                        {
                                            <span class="text-2xl font-bold text-primary">
                                                @Model.Product.CompetitorPrice @Model.Product.CompetitorCurrency
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Price Analysis -->
                        <div class="bg-white rounded-xl border border-gray-200 p-8">
                            <h3 class="text-xl font-semibold text-gray-900 mb-6">Price Analysis</h3>
                            <div class="space-y-4">
                                @if (Model.LowestPrice.HasValue)
                                {
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm font-medium text-gray-600">Lowest Price</span>
                                        <span class="text-lg font-bold text-green-600">$@Model.LowestPrice.Value.ToString("F2")</span>
                                    </div>
                                }
                                @if (Model.HighestPrice.HasValue)
                                {
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm font-medium text-gray-600">Highest Price</span>
                                        <span class="text-lg font-bold text-red-600">$@Model.HighestPrice.Value.ToString("F2")</span>
                                    </div>
                                }
                                @if (Model.AveragePrice.HasValue)
                                {
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm font-medium text-gray-600">Average Price</span>
                                        <span class="text-lg font-bold text-primary">$@Model.AveragePrice.Value.ToString("F2")</span>
                                    </div>
                                }
                                <div class="flex justify-between items-center">
                                    <span class="text-sm font-medium text-gray-600">Total Retailers</span>
                                    <span class="text-lg font-bold text-gray-900">@Model.TotalRetailers</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Retailers Table -->
                    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
                        <div class="p-6 border-b border-gray-200">
                            <h3 class="text-xl font-semibold text-gray-900">Retailers Selling This Product</h3>
                        </div>
                        
                        @if (Model.Retailers.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="w-full">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Retailer</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Availability</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rating</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        @foreach (var retailer in Model.Retailers)
                                        {
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="flex items-center">
                                                        <div class="h-10 w-10 rounded-lg bg-gray-200 flex items-center justify-center">
                                                            <span class="material-symbols-outlined text-gray-400">store</span>
                                                        </div>
                                                        <div class="ml-4">
                                                            <div class="text-sm font-medium text-gray-900">@retailer.RetailerName</div>
                                                            @if (!string.IsNullOrEmpty(retailer.ShippingInfo))
                                                            {
                                                                <div class="text-sm text-gray-500">@retailer.ShippingInfo</div>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    @if (!string.IsNullOrEmpty(retailer.Price))
                                                    {
                                                        <span class="text-lg font-bold text-gray-900">@retailer.Price @retailer.Currency</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-gray-400">N/A</span>
                                                    }
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    @if (!string.IsNullOrEmpty(retailer.Availability))
                                                    {
                                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @(retailer.Availability.ToLower().Contains("stock") ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                            @retailer.Availability
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-gray-400">Unknown</span>
                                                    }
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    @if (!string.IsNullOrEmpty(retailer.Rating))
                                                    {
                                                        <div class="flex items-center">
                                                            <span class="text-yellow-400">★</span>
                                                            <span class="ml-1 text-sm text-gray-900">@retailer.Rating</span>
                                                            @if (!string.IsNullOrEmpty(retailer.ReviewsCount))
                                                            {
                                                                <span class="ml-1 text-sm text-gray-500">(@retailer.ReviewsCount)</span>
                                                            }
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-gray-400">N/A</span>
                                                    }
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                    @if (!string.IsNullOrEmpty(retailer.ProductUrl))
                                                    {
                                                        <a href="@retailer.ProductUrl" target="_blank" 
                                                           class="text-primary hover:text-primary/80 transition-colors">
                                                            View Product
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-gray-400">No URL</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="p-8 text-center">
                                <span class="material-symbols-outlined text-gray-400 text-6xl">store</span>
                                <h3 class="mt-4 text-lg font-medium text-gray-900">No retailers found</h3>
                                <p class="mt-2 text-gray-500">This product was not found at any retailers.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
