<script>
        function requestDemo() {
            // Get user email if available, otherwise prompt
            let email = '';
            if (window.prompt) {
                email = prompt('Enter your email for demo request:');
                if (email) {
                    // Submit demo request
                    fetch('@Url.Action("RequestDemo", "Home")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'email=' + encodeURIComponent(email) + '&company=' + encodeURIComponent('Demo Request')
                    })
                    .then(response => {
                        if (response.ok) {
                            alert('Thank you! We\'ll be in touch soon to schedule your demo.');
                        } else {
                            alert('There was an error submitting your demo request. Please try again.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('There was an error submitting your demo request. Please try again.');
                    });
                }
            }
        }

function scrollToDemo() {
    document.getElementById('demo').scrollIntoView({ behavior: 'smooth' });
